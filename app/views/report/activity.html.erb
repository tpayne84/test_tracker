<div class="page-header">
  <%= link_to records_path, :class => 'btn btn-default' do %>
    <span class="glyphicon glyphicon-list-alt"></span>
    Back
  <% end %>
  <%= link_to edit_record_path(@record), :class => 'btn btn-primary' do %>
    <span class="glyphicon glyphicon-pencil"></span>
    Edit
  <% end %>
  <h1>Activity Report</h1>
</div>

<dl class="dl-horizontal">
  <dt>User:</dt>
  <dd><%= @user.first_name %> <%= @user.last_name %></dd>
</dl>

  <table>
     <tr>
        <th>User</th>
        <th>Course</th>
        <th>Score</th>
        <th>Pass / Fail</th>
        <th>Date Taken</th>
        <th>Requal Date</th>
      </tr>
  <% @user.records.each do |record| %>
  <tr>
    <td><%= @user.first_name %> <%= @user.last_name %></td>
    <td><%= @course_name(record.course_id) %></td>
    <td><%= record.score %></td>




     params.require(:record).permit(:course_id, :score, :pass, :completed_date, :user_id, :requal_date)