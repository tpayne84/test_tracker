<!DOCTYPE html>
<html>
<head>
  <title><%= full_title(yield(:title)) %></title>
  <%= render 'shared/meta' %>
  <%= render 'shared/stylesheets' %>
  <%= render 'shared/shiv' %>
</head>

<body>
		<%= render 'shared/nav' %>
		<%= render 'shared/brand' %>
		<div class="content">
		<%= render 'shared/sidebar' %>
		  	<!-- Main bar -->
		  	<div class="mainbar">
		      <!-- Page heading -->
		      <div class="page-head">
		        <h2 class="pull-left"><%= yield(:title) %></h2>
		        <div class="clearfix"></div>
		      </div>
		      <!-- Page heading ends -->
			    <!-- Matter -->
			    <div class="matter">
		          <div class="container-fluid">
					  <%= render 'shared/alerts' %>
					  <%= yield %>
				  </div>
			    </div>
				<!-- Matter ends -->
		    </div>
		   <!-- Mainbar ends -->	    	
		   <div class="clearfix"></div>
		</div>
  	<%= debug(params) if Rails.env.development? %>
	<%= render 'shared/footer' %>
</body>
</html>

