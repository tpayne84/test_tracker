<% provide(:title, 'Group List') %>

<div class="table-responsive report-width center">
  <table class="table table-striped table-bordered table-hover">
    <thead>
      <tr>
          <th>Name</th>
          <th>Company</th>
          <th>Show</th>
          <th>Edit</th>
          <th>Delete</th>
      </tr>
    </thead>

    <tbody>
      <%= content_tag_for(:tr, @groups) do |group| %>
            <td><%= group.name %></td>
            <td><%= group.client.name %></td>
            <td><%= link_to 'Show', group, :class => "btn btn-default btn-primary" %></td>
            <td><%= link_to 'Edit', edit_group_path(group), :class => "btn btn-default " %></td>
            <td><%= link_to 'Delete', group, method: :delete, data: { confirm: 'Are you sure?' }, :class => "btn btn-default " %></td>
      <% end %>
    </tbody>
  </table>
    <div class="widget-foot">
    <ul class="pagination pull-right">
      <%= will_paginate @groups, renderer: BootstrapPagination::Rails, bootstrap: 3 %>
    </ul>
    <div class="clearfix"></div>
  </div>
</div>