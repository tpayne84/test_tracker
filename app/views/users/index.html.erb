<% provide(:title, 'User List') %>

<div class="table-responsive report-width center">
  <table class="table table-striped table-bordered table-hover">
      <thead>
        <tr>
          <th>First name</th>
          <th>Last name</th>
          <th>Company</th>
          <th>Group</th>
          <th>Show</th>
          <th>Edit</th>
          <th>Delete</th>
        </tr>
      </thead>
    <tbody>
      
      <%= content_tag_for(:tr, @users) do |user| %>
        <td><%= user.first_name %></td>
        <td><%= user.last_name %></td>
        <td><%= user.client.name unless user.client == nil %></td>
        <td><%= user.group.name  unless user.group == nil %></td>
        <td><%= link_to 'Show', user, :class => "btn btn-default btn-primary" %></td>
        <td><%= link_to 'Edit', edit_user_path(user), :class => "btn btn-default " %></td>
        <td><%= link_to 'Delete', user, method: :delete, data: { confirm: 'Are you sure?' }, :class => "btn btn-default " %></td>
      <% end %>
    </tbody>
  </table>
  <div class="widget-foot">
    <ul class="pagination pull-right">
      <%= will_paginate @users, renderer: BootstrapPagination::Rails, bootstrap: 3 %>
    </ul>
    <div class="clearfix"></div>
  </div>
</div>
