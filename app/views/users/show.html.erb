<% provide(:title, 'User Profile') %>
<div class="widget wgreen widget-width">
  <div class="widget-head">
    <div class="pull-left"><%= yield(:title) %></div>
    <div class="clearfix"></div>
  </div>
  <div class="widget-content padd">
<!-- ################### -->

<table class="table table-striped table-bordered table-hover">
      <thead>
        <tr>
          <th>First Name</th>
          <th>Last Name</th>
            <th>Group</th>
          <th>Company</th>
          <th></th>
          <th></th>
        </tr>
      </thead>
      <tbody>
          <tr>
          <td><%= @user.first_name %></td>
          <td><%= @user.last_name %></td>
            <td><%= @user.group.name unless @user.group == nil %></td>
          <td><%= @user.client.name %></td>
          <td><%= link_to "Edit", edit_user_path(@user), :class => 'btn btn-primary' %></td>
          <td><%= link_to "Back", users_path, :class => 'btn btn-default' %></td>
          </tr>
      </tbody>
    </table>

 <!-- ################### -->
  </div>
</div>