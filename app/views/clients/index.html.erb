<% provide(:title, 'Company List') %>
<div class="table-responsive widget-width ">
  <div class="table-responsive widget-width ">
    <table class="table table-striped table-bordered table-hover">
      <thead>
        <tr>
          <th>Name</th>
          <th></th>
          <th></th>
          <th></th>
        </tr>
      </thead>

      <tbody>
        <%= content_tag_for(:tr, @clients) do |client| %>
          <td><%= client.name %></td>
          <td><%= link_to 'Show', client, :class => "btn btn-default btn-primary" %></td>
          <td><%= link_to 'Edit', edit_client_path(client), :class => "btn btn-default " %></td>
          <td><%= link_to 'Delete', client, method: :delete, data: { confirm: 'Are you sure?' }, :class => "btn btn-default " %></td>
        <% end %>
      </tbody>
    </table>
        <div class="widget-foot">
      <ul class="pagination pull-right">
        <%= will_paginate @clients, renderer: BootstrapPagination::Rails, bootstrap: 3 %>
      </ul>
      <div class="clearfix"></div>
    </div>
  </div>
</div>