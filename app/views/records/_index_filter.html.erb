<div class="widget wgreen report-width center">
  <div class="widget-head">
    <div class="pull-left">Filtering Options</div>
    <div class="clearfix"></div>
  </div>
  <div class="widget-content ">
<!-- ################### -->

  <div class="table-responsive">
    <form name="filter" method="get">
      <table class="table table-bordered">
        <thead>
          <tr>
            <th>Company</th>
            <th>User</th>
            <th></th>
          </tr>
        </thead>

        <tbody>
        <!-- collection_select(object, method, collection, value_method, text_method, options = {}, html_options = {}) -->
        <td><%= collection_select(:client, :client_id, Client.find(:all, :order => "name"), :id, :name, {:prompt => true}, {:class=>'form-control'}) %></td>
        <td><%= grouped_collection_select(:client, :user_id, Client.order(:name), :users, :name, :id, :full_name, {:prompt => true}, {:class=>'form-control'}) %></td>
        <td><%= submit_tag 'Filter', :class => "btn btn-primary form-control" %></td>
        </tbody>
      </table>
    </form>
  </div>

 <!-- ################### -->
  </div>
</div>


