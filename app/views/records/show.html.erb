<% provide(:title, 'Record Details') %>
<div class="widget wgreen widget-width">
  <div class="widget-head">
    <div class="pull-left"><%= yield(:title) %></div>
    <div class="clearfix"></div>
  </div>
   <div class="widget-content patd">
<!-- ################### -->
    <div class="table-responsive widget-width ">
      <table class="table table-striped table-bordered table-hover">
        <thead>
          <tr>
            <th>Company</th>
            <th>User</th>
            <th>Group</th>
            <th>Course</th>
            <th>Completed Date</th>
            <th>Requal Date</th>
            <th>Score</th>
            <th>Pass / Fail</th>
            <th></th>
            <th></th>
          </tr>
        </thead>
        <tbody>
            <tr>
              <td><%= @record.user.client.name %></td>
              <td><%= @record.user.full_name %></td>
              <td><%= @record.user.group.name %></td>
              <td><%= @course.name %></td>
              <td><%= @record.completed_date %></td>
              <td><%= @record.requal_date %></td>
              <td><%= @record.score %></td>
              <% if @record.pass == true %>
               <td style="color:green;">Passed</td>
              <% else %>
                <td style="color:red;">Failed</td>
              <% end %>
              <td><%= link_to "Edit", edit_record_path(@record), :class => 'btn btn-primary' %></td>
              <td><%= link_to "Back", records_path, :class => 'btn btn-default' %></td>
            </tr>
        </tbody>
      </table>
    </div>
 <!-- ################### -->
  </div>
</div>