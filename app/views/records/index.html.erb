<div class="page-header">
  <%= link_to new_record_path, :class => 'btn btn-primary' do %>
    <span class="glyphicon glyphicon-plus"></span>
    New Record
  <% end %>
  <h1>Activity Report</h1>
</div>

<div class="table-responsive">
  <table class="table table-striped table-bordered table-hover">
    <thead>
      <tr>

        <th>User</th>
        <th>Client</th>
        <th>Group</th>
        <th>Course</th>
        <th>Score</th>
        <th>Pass / Fail</th>
        <th>Completed Date</th>
        <th>Requal Date</th>
        <th>Show</th>
        <th>Edit</th>
        <th>Delete</th>
      </tr>
    </thead>

    <tbody>
      <%= content_tag_for(:tr, @records) do |record| %>
            <td><%= record.user.full_name %></td>
            <td><%= record.user.client.name %></td>
            <td><%= record.user.group.name %></td>
            <td><%= get_course_name(record.course_id) %></td>
            <td><%= record.score %></td>
            <% if record.pass == true %>
            <td style="color:green;">Passed</td>
            <% else %>
            <td style="color:red;">Failed</td>
            <% end %>
            <td><%= record.completed_date %></td>
            <td><%= record.requal_date %></td>

            <td><%= link_to 'Show', record %></td>
        <td><%= link_to 'Edit', edit_record_path(record) %></td>
        <td><%= link_to 'Delete', record, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      <% end %>
    </tbody>
  </table>
</div>
