<% provide(:title, 'Activity Report') %>

<div class="table-responsive widget-width  widget-width">
  <table class="table table-striped table-bordered table-hover">
    <thead>
      <tr>
        <th>Search Results</th>
      </tr>
    </thead>

    <tbody>
      <%= content_tag_for(:tr, @results) do |result| %>
            
            <td><%= result %></td>

            <td><%= link_to 'Show', result, :class => "btn btn-default btn-primary" %></td>
            <td><%= link_to 'Edit', edit_result_path(result), :class => "btn btn-default " %></td>
            <td><%= link_to 'Delete', result, method: :delete, data: { confirm: 'Are you sure?' }, :class => "btn btn-default " %></td>
      <% end %>
    </tbody>
  </table>
  