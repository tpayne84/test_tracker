<% provide(:title, 'Course Profile') %>
<div class="widget wgreen widget-width">
  <div class="widget-head">
    <div class="pull-left"><%= yield(:title) %></div>
    <div class="clearfix"></div>
  </div>
  <div class="widget-content padd">
<!-- ################### -->
    <div class="table-responsive widget-width ">
      <table class="table table-striped table-bordered table-hover">
        <thead>
          <tr>
          <th>Course Name</th>
          <th>Minumum Score</th>
          <th></th>
          <th></th>
          </tr>
        </thead>
        <tbody>
            <tr>
            <td><%= @course.name %></td>
            <td><%= @course.min_score %></td>
            <td><%= link_to "Edit", edit_course_path(@course), :class => 'btn btn-primary' %></td>
            <td><%= link_to "Back", courses_path, :class => 'btn btn-default' %></td>
            </tr>
        </tbody>
      </table>
    </div>
 <!-- ################### -->
  </div>
</div>