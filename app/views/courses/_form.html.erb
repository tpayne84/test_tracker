<div class="widget wgreen widget-width">
  <div class="widget-head">
    <div class="pull-left"><%= yield(:title) %></div>
    <div class="clearfix"></div>
  </div>
  <div class="widget-content padd">
<!-- ################### -->

<%= form_for(@course, :html => { :class => "form-horizontal" }) do |f| %>
  <% if @course.errors.any? %>
    <div class="alert alert-danger alert-dismissable">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <h4><%= pluralize(@course.errors.count, "error") %> prohibited this course from being saved:</h4>

      <ul>
      <% @course.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :name, :class => "col-lg-2 control-label" %>
    <div class="col-lg-10">
      <%= f.text_field :name, :class => "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :requal_interval, "Requal Interval (Months)", :class => "col-lg-2 control-label" %>
    <div class="col-lg-2">
      <%= f.number_field :requal_interval, :class => "form-control" %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :min_score, "Minimum Score", :class => "col-lg-2 control-label" %>
    <div class="col-lg-2">
      <%= f.number_field :min_score, :class => "form-control" %>
    </div>
  </div>

  <div class="form-group">
    <div class="col-lg-10">
      <%= f.submit :class => "btn btn-primary btn-lg" %>
    </div>
  </div>
<% end %>


 <!-- ################### -->
  </div>
</div>